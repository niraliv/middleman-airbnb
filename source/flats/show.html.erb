


<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('https://kitt.lewagon.com/placeholder/cities/london'); height: 50vh; background-position: center;">
</div>

<div class="container">
  <!-- Inject flat data in template -->
  <% flat = data.flats[owner] %>
  <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle", width:"80" %>
  <p><%= flat.name %></p>
  <h2><%= flat.description %></h2>
  <p><%= flat.city_name %></p>
  <p class="rating"></p>
</div>

<div class="wrapper">
  <div class="container">

  </div>
</div>
